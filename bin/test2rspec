#!/usr/bin/env ruby

require 'find'
require 'ostruct'
require 'optparse'
require File.dirname(__FILE__) + "/../lib/spec/tool/test_unit_converter.rb"

opts = OptionParser.new do |opts|
  opts.banner = "Usage: translate [options] SRC [DEST]"
  opts.separator ""

  opts.on_tail("-h", "--help", "Show this message") do
    puts opts
    exit
  end
end
opts.parse!(ARGV)

cl = Spec::Tool::CommandLine.new
source = ARGV[0]
target = ARGV[1]
begin
  cl.run source, target
rescue => e
  STDERR.puts e.message
  STDERR.puts opts
end
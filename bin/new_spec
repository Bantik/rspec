#!/usr/bin/env ruby

require 'find'
require File.dirname(__FILE__) + "/../lib/spec"

$context_runner = Spec::Runner::ContextRunner.new(ARGV)

ARGV.each do |file|
  Find.find(file) do |path|
    if FileTest.file?(path) and File.extname(path) == '.rb'
      require path
    end
  end
end

$context_runner.run
